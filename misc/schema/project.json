{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Atlas project file schema",
  "description": "Descriptor for project. Contains all the information contained within a .aproj file.",
  "type": "object",

  "properties": {
    "name": {
      "description": "name of project",
      "type": "string"
    },
    "plugins": {
      "description": "List of enabled plugins",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      }
    }
  },

  "required": ["name"]
}